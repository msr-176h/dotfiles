"3.8 (created: 2013/10/13 18:08:56)

" vim: set ft=vimperator:

"ヒントモードの表示を数字から文字に変更"
set hintchars=ifjklasdhguonmerwc

" Backspace & h / l に戻る/進むを割り当て
map <BS> <A-Left>
map h    <A-Left>
map l    <A-Right>

" j/k でのスクロール幅を 1行 から 3行 に変更
map j 3<C-e>
map k 3<C-y>

" H/L や ← → でタブ移動
map H gT
map L gt
map <Left>  gT
map <Right> gt
